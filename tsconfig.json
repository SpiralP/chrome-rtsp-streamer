{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "newLine": "lf",
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "exclude": ["node_modules", "**/node_modules/*"]
}
